<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/red"
        android:layout_alignParentStart="true"
        android:layout_marginTop="150dp"
        android:textSize="40sp"
        android:text="1"
        android:gravity="center"
        android:textColor="#F8F6F6"
        android:background="#F11717"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/green"
        android:layout_below="@+id/red"
        android:layout_marginLeft="90dp"
        android:textSize="40sp"
        android:gravity="center"
        android:text="2"
        android:textColor="#F8F6F6"
        android:background="#4CAF50"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/yellow"
        android:textSize="40sp"
        android:textColor="#F8F6F6"
        android:gravity="center"
        android:layout_below="@+id/green"
        android:layout_marginLeft="180dp"
        android:text="3"
        android:background="#FFEB3B"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/violet"
        android:textSize="40sp"
        android:gravity="center"
        android:textColor="#F8F6F6"
        android:layout_below="@+id/yellow"
        android:layout_marginLeft="270dp"
        android:text="4"
        android:background="#9C27B0"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/nearviolet"
        android:layout_below="@+id/violet"
        android:gravity="center"
        android:layout_marginLeft="180dp"
        android:textSize="40sp"
        android:textColor="#F8F6F6"
        android:text="5"
        android:background="#B189B8"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/brown"
        android:layout_below="@+id/nearviolet"
        android:layout_marginLeft="90dp"
        android:gravity="center"
        android:textSize="40sp"
        android:text="6"
        android:textColor="#F8F6F6"
        android:background="#901E26"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/blue"
        android:textSize="40sp"
        android:layout_below="@+id/brown"
        android:gravity="center"
        android:textColor="#F8F6F6"
        android:text="7"
        android:background="#A4DAF3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>


</RelativeLayout>